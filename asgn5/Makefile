# Makefile for CSE 13S, Spring 2023, Assignment 3

# DO NOT EDIT THIS FILE

# Usage:
#
#    $ make             Make the sorting program (ready for LLDB debugging).
#    $ make all
#    $ make colorb
#    $ make iotest
#
#    $ make clean       Type this command after editing this Makefile or
#                       when switching between all and release targets.
#
#    $ make format      Run clang-format on *.c and *.h


CC=clang
CFLAGS=-Wall -Wextra -Wstrict-prototypes -Werror -pedantic -g -gdwarf-4

LFLAGS = -lm

EXEC1=colorb
OBJS1= colorb.o io.o bmp.o 

EXEC2 = iotest
OBJS2 = io.o iotest.o



.PHONY: all  clean

all: $(EXEC1) $(EXEC2)

$(EXEC1): $(OBJS1)
	$(CC) $^ -o $@

$(EXEC2): $(OBJS2)
	$(CC) $^ -o $@ 

%.o : %.c
	$(CC) $(CFLAGS) -c $<

clean:
	rm -f $(EXEC1) $(OBJS1) $(EXEC2) $(OBJS2)

format:
	clang-format -i --style=file *.[ch]

